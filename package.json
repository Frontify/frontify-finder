{
    "name": "@frontify/frontify-finder",
    "version": "2.0.0-beta.0",
    "description": "Search and access Frontify assets data from any secure web app (to be used alongside Frontify Authenticator v2).",
    "files": [
        "dist/**/*"
    ],
    "types": "dist/index.d.ts",
    "main": "dist/index.js",
    "exports": {
        ".": {
            "require": "./dist/commonjs/index.js",
            "default": "./dist/commonjs/index.js",
            "import": "./dist/esm/index.mjs"
        }
    },
    "module": "dist/esm/index.mjs",
    "scripts": {
        "test": "jest --config jestconfig.json",
        "build": "cross-env NODE_ENV=production npm run build:ts",
        "build:ts": "rollup -c",
        "local": "npm run build && tsc --outDir dist --esModuleInterop src/local.ts && node dist/local.js",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Frontify/frontify-finder.git"
    },
    "keywords": [
        "frontify",
        "finder",
        "oauth",
        "brand",
        "assets",
        "dam"
    ],
    "author": "Frontify",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Frontify/frontify-finder/issues"
    },
    "homepage": "https://developer.frontify.com/",
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "@types/node": "^16.7.13",
        "cross-env": "^7.0.3",
        "esbuild": "^0.12.17",
        "esm": "^3.2.25",
        "jest": "^27.0.6",
        "node-fetch": "^3.0.0",
        "prettier": "^2.3.2",
        "requirejs": "^2.3.6",
        "rollup": "^2.55.1",
        "rollup-plugin-dts": "^3.0.2",
        "rollup-plugin-esbuild": "^4.5.0",
        "ts-jest": "^27.0.4",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.3.5"
    },
    "dependencies": {}
}
