{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "noEmit": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/tests/*"]
}
